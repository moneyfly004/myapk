<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/order_no_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单号："
        android:textSize="14sp" />

    <TextView
        android:id="@+id/amount_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="支付金额：¥0.00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?colorPrimary" />

    <ImageView
        android:id="@+id/qr_code_image"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:contentDescription="支付二维码"
        android:scaleType="fitXY" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/open_alipay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="跳转到支付宝App支付"
        app:cornerRadius="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/open_webview_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="在App内打开支付页面"
        app:cornerRadius="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/check_status_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="检查支付状态"
        app:cornerRadius="8dp" />

</LinearLayout>

